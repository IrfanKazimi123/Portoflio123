{% doc %}
  Renders a text block with selectable style and alignment.
{% enddoc %}

<div
  class="text {{ block.settings.text_style }} text-align-{{ block.settings.alignment }}"
  {{ block.shopify_attributes }}
>
  {{ block.settings.text }}
</div>

{% stylesheet %}
  .text {
    margin: 0;
    line-height: 1.4;
  }

  /* Alignment */
  .text-align-left {
    text-align: left;
  }

  .text-align-center {
    text-align: center;
  }

  .text-align-right {
    text-align: right;
  }

  /* Text styles */
  .text--title {
    font-size: 2rem;
    font-weight: 700;
  }

  .text--subtitle {
    font-size: 1.5rem;
    font-weight: 500;
  }

  .text--normal {
    font-size: 1rem;
    font-weight: 400;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Text"
    },
    {
      "type": "select",
      "id": "text_style",
      "label": "Text style",
      "default": "text--title",
      "options": [
        { "value": "text--title", "label": "Title" },
        { "value": "text--subtitle", "label": "Subtitle" },
        { "value": "text--normal", "label": "Normal" }
      ]
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text"
    }
  ]
}
{% endschema %}
