<section class="product">
  <h1>{{ product.title }}</h1>
  <p>{{ product.price | money }}</p>

  <img
    src="{{ product.featured_image | image_url: width: 600 }}"
    alt="{{ product.title }}"
  >

  <div class="description">
    {{ product.description }}
  </div>
</section>

{% schema %}
{
  "name": "Main Product",
  "settings": []
}
{% endschema %}
